<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- custom textview -->
    <style name="TextViewStyle.Title1" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_small</item>
    </style>

    <style name="TextViewStyle.Title2" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_small</item>
    </style>

    <style name="TextViewStyle.Banner.Title1" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/banner_title_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_default</item>
    </style>

    <style name="TextViewStyle.default" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_small</item>
        <item name="android:lineSpacingExtra">@dimen/default_linespacing</item>
    </style>

    <style name="TextViewStyle.pageTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingStart">@dimen/activity_padding_default</item>
    </style>

    <!-- custom imageview -->
    <style name="customImageView"></style>
    <style name="customImageView.character">
        <item name="android:layout_width">@dimen/banner_character_imagesize</item>
        <item name="android:layout_height">@dimen/banner_character_imagesize</item>
        <item name ="android:layout_marginLeft">@dimen/activity_margin_small</item>
    </style>

    <!-- custom cardView -->
    <style name="customCardViewStyle"></style>
    <style name="customCardViewStyle.banner" parent="customCardViewStyle">
        <item name ="android:layout_margin">@dimen/activity_margin_small</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="cardBackgroundColor">@color/gray_default</item>
    </style>

</resources>
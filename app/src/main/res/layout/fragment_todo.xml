<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.sub.TodoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 할일 리스트1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/treeManagement_CardView_todo1"
            android:backgroundTint="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_default"
            android:layout_marginBottom="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_default"
            app:cardCornerRadius="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="@dimen/activity_padding_default">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="나무 물주기"
                    android:textStyle="bold"
                    android:textColor="@color/green_textColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/treeManagement_TextView_ans1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="양호"
                    android:textStyle="bold"
                    android:padding="@dimen/activity_padding_default"
                    app:layout_constraintEnd_toStartOf="@+id/treeManagement_imageView_ans1" />

                <ImageView
                    android:id="@+id/treeManagement_imageView_ans1"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_green"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- 할일 리스트2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/treeManagement_CardView_todo2"
            android:backgroundTint="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_default"
            android:layout_marginBottom="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_default"
            app:cardCornerRadius="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="@dimen/activity_padding_default">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="낙엽 치우기"
                    android:textStyle="bold"
                    android:textColor="@color/green_textColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/treeManagement_TextView_ans2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="양호"
                    android:textStyle="bold"
                    android:padding="@dimen/activity_padding_default"
                    app:layout_constraintEnd_toStartOf="@+id/treeManagement_imageView_ans2" />

                <ImageView
                    android:id="@+id/treeManagement_imageView_ans2"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_green"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- 할일 리스트3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/treeManagement_CardView_todo3"
            android:backgroundTint="@color/gray_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_default"
            android:layout_marginBottom="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_default"
            app:cardCornerRadius="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="@dimen/activity_padding_default">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="훼손된 시설물 신고하기"
                    android:textStyle="bold"
                    android:textColor="@color/green_textColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/treeManagement_TextView_ans3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="양호"
                    android:textStyle="bold"
                    android:padding="@dimen/activity_padding_default"
                    app:layout_constraintEnd_toStartOf="@+id/treeManagement_imageView_ans3" />

                <ImageView
                    android:id="@+id/treeManagement_imageView_ans3"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_green"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
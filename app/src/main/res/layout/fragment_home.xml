<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Page Title -->
        <TextView
            android:id="@+id/home_TextView_pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 나무 정보"/>

        <!-- Image View : Explain page -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4">
                <TextView
                    android:id="@+id/home_TextView_explain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="입양한 나무의 정보를 확인하세요!"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/ic_baseline_image_24"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tab Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <Button
                android:id="@+id/home_Button_treeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나무정보"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/home_Button_treeManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 나무 관리"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/home_Button_treeTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나무 관리 TIP"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- fragment -->
        <FrameLayout
            android:id="@+id/mfragment_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</FrameLayout>
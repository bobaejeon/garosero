<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.child.TreeInfoFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 나무정보 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin_default"
                android:backgroundTint="@color/gray_default"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_padding_default"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/treeInfo_ImageView_treeCharacter"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_width="119dp"
                        android:layout_height="153dp"
                        android:layout_gravity="center"/>

                    <!-- 나무고유번호 -->
                    <TextView
                        android:id="@+id/tv_tree_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/activity_padding_default"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center"/>

                    <!-- 이산화탄소 흡수량 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이산화탄소 흡수량"
                        android:paddingBottom="@dimen/activity_padding_default"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_carbon_amt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/green_textColor"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:id="@+id/treeInfo_FrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
</FrameLayout>
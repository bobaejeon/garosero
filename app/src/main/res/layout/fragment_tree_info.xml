<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.TreeInfoFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 나무정보 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin_default"
                android:backgroundTint="@color/gray_default"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_padding_default"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/treeInfo_ImageView_treeCharacter"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_width="119dp"
                        android:layout_height="153dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mid_tree"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="나무고유번호"
                        android:paddingBottom="@dimen/activity_padding_default"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이산화탄소 흡수량"
                        android:paddingBottom="@dimen/activity_padding_default"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="99999"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/green_textColor"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Table Data -->
            <TableLayout
                android:id="@+id/treeInfo_TableLayout_treeinfo"
                android:paddingStart="@dimen/activity_padding_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_default">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 나무정보"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/activity_padding_default"/>

                <TableRow>
                    <TextView
                        android:textStyle="bold"
                        android:text="수목명"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:text="은행 나무"
                        android:layout_margin="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:textStyle="bold"
                        android:text="가로명"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:text="덕수궁길"
                        android:layout_margin="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:textStyle="bold"
                        android:text="구명"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:text="중구"
                        android:layout_margin="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:textStyle="bold"
                        android:text="위치"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:text="경찰서"
                        android:layout_margin="5dp"/>
                </TableRow>
            </TableLayout>

            <!-- 나무가 없을때 -->
            <FrameLayout
                android:id="@+id/treeInfo_FrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
</FrameLayout>